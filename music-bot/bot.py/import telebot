import telebot
import yt_dlp
import os

# TOKEN serverda 'BOT_TOKEN' nomi bilan environment variable bo'lishi kerak
TOKEN = os.getenv("BOT_TOKEN") or "BU_YERGA_TOKEN_YOZILADI"

bot = telebot.TeleBot(7673679019:AAFPv10nyNP9oWnRrYKZmqPdFpyhH_3NDYE)

@bot.message_handler(commands=['start'])
def welcome(message):
    bot.send_message(message.chat.id, "üëã Salom! Men sizga YouTube'dan üéµ musiqa yuklab beraman. Faqat link yuboring!")

@bot.message_handler(func=lambda message: True)
def download_audio(message):
    url = message.text
    bot.send_message(message.chat.id, "üîÑ Yuklanmoqda... iltimos kuting!")

    try:
        ydl_opts = {
            'format': 'bestaudio/best',
            'outtmpl': 'music.%(ext)s',
            'postprocessors': [{
                'key': 'FFmpegExtractAudio',
                'preferredcodec': 'mp3',
                'preferredquality': '192',
            }],
            'quiet': True,
        }

        with yt_dlp.YoutubeDL(ydl_opts) as ydl:
            ydl.download([url])

        with open("music.mp3", "rb") as audio:
            bot.send_audio(message.chat.id, audio, caption="‚úÖ Mana sizga musiqa!")

        os.remove("music.mp3")

    except Exception as e:
        bot.send_message(message.chat.id, f"‚ùå Xatolik yuz berdi:\n`{e}`", parse_mode="Markdown")

bot.polling()
